extends ../../layouts/default.pug 

block main 
    .contab
        .chat-area
            .messages
                each chat in chats
                    .message.received
                        .message-content #{chat.inforUser.fullName}
                        .message-chat #{chat.content}
                
                .message-input
                            form(
                                class="message-input"
                                action=""
                            )
                                input(
                                    class="ip-chat" 
                                    type="text" 
                                    placeholder="Nhập nội dung..."
                                    name="content"
                                )
                                button.send-btn
                                    <i class="fa-solid fa-arrow-right"></i>

